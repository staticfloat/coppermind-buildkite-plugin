#!/bin/bash

# Skip running the user's commands if the pre-command decided it should be so
if [[ "${BUILDKITE_PLUGIN_COPPERMIND_SKIP_COMMAND-no}" == "yes" ]]; then
    buildkite-agent annotate --style info "Skipping previously completed command"
    exit 0
fi

echo "About to run: ${BUILDKITE_COMMAND}"
eval "${BUILDKITE_COMMAND}"
